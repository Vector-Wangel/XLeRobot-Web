<mujoco model="xlerobot scene">

  <include file="xlerobot.xml"/>

  <statistic center="0 0 1.0" extent="2.0"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="150" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture name="grid" type="2d" builtin="checker" width="256" height="256" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
    <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance=".2"/>
    <material name="obj_red" rgba="0.8 0.2 0.2 1"/>
    <material name="obj_green" rgba="0.2 0.8 0.2 1"/>
    <material name="obj_blue" rgba="0.2 0.2 0.8 1"/>
    <material name="obj_yellow" rgba="0.8 0.8 0.2 1"/>
    <material name="obj_table" rgba="0.8 0.8 0.8 1"/>
  </asset>

  <default>
    <geom condim="6" friction="0.2 0.01 0.003"/>
  </default>

  <worldbody>
    <light pos="0 0 3" dir="0 0 -1" directional="false"/>
    <!-- Floor with friction: sliding rolling torsional -->
    <geom name="floor" size="0 0 0.05" type="plane" material="grid" contype="1" conaffinity="1"/>
    
    <!-- Simple geometric objects for manipulation with friction -->
    <body name="box1" pos="0.5 0.3 0.8">
      <freejoint/>
      <geom type="box" size="0.02 0.03 0.05" material="obj_red" mass="0.1" contype="1" conaffinity="1"/>
    </body>

    <body name="table" pos="0.7 0.0 0.36">
      <geom type="box" size="0.3 0.5 0.36" material="obj_table" mass="0.1" contype="1" conaffinity="1"/>
    </body>
    
    <body name="sphere1" pos="0.5 0.45 0.8">
      <freejoint/>
      <geom type="sphere" size="0.04" material="obj_green" mass="0.1" contype="1" conaffinity="1"/>
    </body>
    
    <body name="cylinder1" pos="0.5 0.2 0.8">
      <freejoint/>
      <geom type="cylinder" size="0.03 0.06" material="obj_blue" mass="0.1" contype="1" conaffinity="1"/>
    </body>
    
    <body name="box2" pos="0.5 -0.3 0.8">
      <freejoint/>
      <geom type="box" size="0.04 0.04 0.04" material="obj_yellow" mass="0.1" contype="1" conaffinity="1"/>
    </body>
    
    <body name="sphere2" pos="0.5 -0.2 0.8">
      <freejoint/>
      <geom type="sphere" size="0.035" material="obj_red" mass="0.1" contype="1" conaffinity="1"/>
    </body>
  </worldbody>

</mujoco>
